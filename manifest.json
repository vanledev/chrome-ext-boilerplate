{
  "manifest_version": 3,
  "name": "MerchBridge Etsy Helper",
  "version": "1.3.22",
  "description": "An extension to help you fulfill Etsy orders easier with MerchBridge.",
  "devtools_page": "devtool/devtool.html",
  "icons": {
    "16": "assets/images/16.png",
    "48": "assets/images/48.png",
    "128": "assets/images/128.png"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "Etsy Helper",
    "default_icon": {
      "48": "assets/images/48.png"
    }
  },
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": ["https://www.etsy.com/*", "https://www.yuntrack.com/*"],
      "js": [
        "assets/libs/jquery.min.js",
        "assets/libs/jquery.toast.js",
        "scripts/content_script.js",
        "scripts/sync_order.js",
        "scripts/add_tracking.js",
        "scripts/settings.js"
      ],
      "css": ["assets/styles/jquery.toast.css", "assets/styles/content.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.etsy.com/your/shops/me/advertising*"],
      "js": [
        "assets/libs/search/fuse.js",

        "scripts/etsy-marketing/helpers.js",
        "scripts/etsy-marketing/globals.js",
        "scripts/etsy-marketing/search-filter/state.js",
        "scripts/etsy-marketing/main.js",
        "scripts/etsy-marketing/search-filter/update-dom.js",
        "scripts/etsy-marketing/search-filter/fuse.js",
        "scripts/etsy-marketing/search-filter/filter-keywords.js",
        "scripts/etsy-marketing/search-filter/search.js",
        "scripts/etsy-marketing/search-filter/add-dom.js",

        "scripts/etsy-marketing/metric/update-dom.js",
        "scripts/etsy-marketing/metric/calculator.js",

        "scripts/etsy-marketing/metric/add-to-dom.js"
      ],
      "css": ["scripts/etsy-marketing/etsy-marketing.css"]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'",
    "sandbox": "sandbox allow-scripts; script-src 'self' 'https://www.etsy.com/*'; object-src 'self'"
  },
  "host_permissions": [
    "https://www.etsy.com/*",
    "https://api-dev.merchbridge.com/*",
    "https://api.merchbridge.com/*",
    "http://127.0.0.1:8080/*",
    "https://www.yuntrack.com/*"
  ],
  "permissions": ["scripting", "activeTab", "webNavigation", "storage"],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/images/not-found.png",
        "assets/images/completed.png",
        "assets/images/loading.gif",
        "injected.js",

        "assets/libs/jquery.min.js",
        "assets/libs/jquery-ui.min.js",
        "scripts/etsy-marketing/etsy-marketing.css"
      ],
      "matches": ["https://www.etsy.com/*", "https://www.yuntrack.com/*"]
    }
  ]
}
